{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Dominominal",
    "version": "0.1.27",
    "identifier": "com.lea-reift.dominominal",
    "build": {
        "frontendDist": "./resources/app/public",
        "devUrl": "https://dominominal.test"
    },
    "app": {
        "windows": [
            {
                "label": "splashscreen",
                "url": "splashscreen.html",
                "center": true,
                "closable": false,
                "decorations": false,
                "width": 180,
                "height": 240,
                "resizable": false,
                "visible": true
            },
            {
                "label": "app",
                "url": "http://localhost:8000",
                "title": "Dominominal",
                "resizable": true,
                "zoomHotkeysEnabled": true,
                "visible": false,
                "maximized": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "createUpdaterArtifacts": true,
        "active": true,
        "targets": [
            "nsis"
        ],
        "resources": {
            "./resources/app": "./"
        },
        "externalBin": [
            "resources/php"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "nsis": {
                "installerHooks": "./windows/hooks.nsh",
                "languages": [
                    "Spanish"
                ]
            }
        }
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJEQTRFNEUzMDRERkVGRTUKUldUbDc5OEU0K1NrTFN2c0lyT2hMVW54VlJKamdEMU91OE1IeWRPS2dmOC9vY1FKQ0NRdlRVQ1IK",
            "endpoints": [
                "https://raw.githubusercontent.com/Lea-Reift/dominominal/refs/heads/main/dominominal.version.json"
            ]
        }
    }
}